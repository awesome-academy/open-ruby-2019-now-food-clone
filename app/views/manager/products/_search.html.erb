<div class="cart-body">
  <%= search_form_for [:manager, @search] do |f| %>
    <div class="row">
      <div class="col-4">
        <div class="form-group">
          <%= f.label t(".name") %>
          <%= f.search_field :name_cont, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col-4">
        <div class="form-group">
          <%= f.label t(".price_from") %>
          <%= f.search_field :price_gteq, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col-4">
        <div class="form-group">
          <%= f.label t(".price_to") %>
          <%= f.search_field :price_lteq, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col-4">
        <div class="form-group">
          <%= f.label t(".status") %>
          <%= f.select :status_eq,
            options_for_select(enum_options_for_select_value(Combo, :status),
            selected: f.object.status_eq),
            {include_blank: t(".seach")}, {class: "form-control"} %>
        </div>
      </div>

      <div class="col-4 mt-2">
        <div class="form-group">
          <div id="stores">
          <%= f.label t(".store") %>
            <%= f.select :store_id_eq, options_for_select(get_stores,
              selected: f.object.store_id_eq),
              {include_blank: t(".seach")}, {class: "js-example-basic-single js-states
              form-control",id: "id_label_single"} %>
          </div>
        </div>
      </div>

      <div class="col-12">
        <%= f.submit t(".search"), class: "btn btn-success btn-sm mb-2 pt-0" %>
      </div>
    </div>
  <% end %>
</div>
